<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <corners
        android:bottomRightRadius="27dp"
        android:radius="27dp" />

    <gradient
        android:angle="45"
        android:centerX="2.0"
        android:centerY="2.0"
        android:endColor="#CCD0D1"
        android:gradientRadius="2dp"
        android:startColor="#CCD0D1"
        android:type="linear" />

    <!--If your shape requires only one solid color-->
    <!--<solid
        android:color="#FFFFFF" />-->

    <size
        android:width="50dp"
        android:height="50dp" />

    <!--Use android:dashWidth="2dp" and android:dashGap="2dp"
    to add dashes to your stroke-->
    <stroke
        android:width="1dp"
        android:color="#0A0707" />

    <!--If you want to add padding-->
    <!-- <padding
         android:left="10dp"
         android:top="20dp"
         android:right="40dp"
         android:bottom="8dp" />-->

</shape>